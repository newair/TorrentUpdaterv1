<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="100">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/MonitorTorentLabel"
            android:id="@+id/monitorTextView"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:textSize="20dp"
            android:layout_marginTop="40dp"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monitor_button"
            android:id="@id/view_monitoring_torrents"
            android:layout_gravity="center"
            android:onClick="monitorClicked"/>

<!--    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monitorScrollView"
            android:layout_gravity="left|center_vertical"
android:layout_weight="40"
            >-->
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_monitorng_torrents_list"
            android:id="@id/view_monitoring_torrents"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="monitoringListClicked"/>




           <!-- </ScrollView>-->
</LinearLayout>